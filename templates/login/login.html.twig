{# extends 'base.html.twig' #}

{% block title %}
    <h3>Вход в систему поиска заявок пользователей</h3>
{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}Неверный логин или пароль.{% endif %}
        <p><input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus></p>
        <p><input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required></p>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn btn-lg btn-primary" type="submit">Войти</button>
    </form>
{% endblock %}
